#!/usr/bin/env bash
# bin/release <build-dir>

BUILD_DIR=$1

cat <<EOF
---
config_vars:
  PATH: /app/.jdk/bin:/usr/local/bin:/usr/bin:/bin
  JAVA_OPTS: -Xmx384m -Xss512k -XX:+UseCompressedOops
  MAVEN_OPTS: -Xmx384m -Xss512k -XX:+UseCompressedOops 
addons:
  - heroku-postgresql
default_process_types:
  web:      java \$JAVA_OPTS -jar package/target/dependency/webapp-runner.jar --port \$PORT --path /openmrs --expand-war package/target/distro/*.war
EOF
